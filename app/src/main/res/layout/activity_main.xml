<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
    <data/>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/toolbar_center"/>

        <Button
            android:id="@+id/baseRecyclerViewActivity"
            android:text="Activity列表示例"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/baseRecyclerViewFragment"
            android:text="Fragment列表示例"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/net_RecyclerViewActivity"
            android:text="网络请求列表"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/dagger_normal_use"
            android:text="Dagger基本使用示例"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/dagger_list_use"
            android:text="Dagger列表使用示例"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/ic_launcher"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:paddingLeft="@dimen/space_16"
                android:paddingRight="@dimen/space_16"
                android:src="@mipmap/ic_launcher"
                android:transitionName="ic_launcher" />
            <ImageView
                android:id="@+id/test_anim_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:transitionName="toolbar_back"
                android:src="@drawable/ic_toolbar_back"/>
            <Button
                android:id="@+id/test_anim"
                android:text="共享元素跳转"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <Button
            android:id="@+id/multi_list"
            android:text="多种类型的列表"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

</layout>